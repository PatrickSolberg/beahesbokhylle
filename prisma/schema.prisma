// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Admin {
    id       Int    @id @default(autoincrement())
    username String @unique
    email    String @unique
    password String
}

// Define the `Blog` model to represent blog posts
model Blog {
    id        Int       @id @default(autoincrement())
    title     String
    content   String
    author    String
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    comments  Comment[]
}

// Define the `Comment` model to represent comments on blog posts
model Comment {
    id        Int      @id @default(autoincrement())
    content   String
    author    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    blog      Blog     @relation(fields: [blogId], references: [id])
    blogId    Int
}
